# AI-Powered Migration Validation System Environment Configuration

# Application Environment
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=generate_a_secure_secret_key_at_least_32_chars

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=["*"]

# Database Configuration
# For development (SQLite)
DB_DRIVER=sqlite+aiosqlite
DB_FILE=migration_validator.db

# For production (PostgreSQL)
# DB_DRIVER=postgresql+asyncpg
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=migration_validator
# DB_USER=migration_user
# DB_PASSWORD=secure_password
# DB_SSLMODE=prefer

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
DB_CONNECT_RETRIES=3
DB_RETRY_INTERVAL=1.0

# Direct Database URL (overrides individual settings if provided)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/migration_validator
# DATABASE_URL=sqlite+aiosqlite:///./migration_validator.db

# LLM Provider Settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
LLM_TIMEOUT=60.0
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ENABLED=true

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_ENABLED=true

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro
GOOGLE_ENABLED=true

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
MAX_FILES_PER_REQUEST=20
UPLOAD_DIR=./uploads

# Performance Settings
ASYNC_CONCURRENCY_LIMIT=10
REQUEST_TIMEOUT=300.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Settings (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Behavioral Validation Settings
BEHAVIORAL_TIMEOUT=300
MAX_BROWSER_INSTANCES=3
SCREENSHOT_QUALITY=high

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=90
ENABLE_PERFORMANCE_MONITORING=true

# Backup and Maintenance
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
AUTO_CLEANUP_ENABLED=true
CLEANUP_OLDER_THAN_DAYS=30

# Development Settings
ENABLE_DEBUG_ROUTES=false
MOCK_LLM_RESPONSES=false
SKIP_MIGRATIONS=false