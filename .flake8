[flake8]
# Configuration for flake8 linting
max-line-length = 88
max-complexity = 12

# Ignore specific error codes
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # F401: module imported but unused (allow for __init__.py files)
    F401

# Exclude directories
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    docs/_build

# Per-file ignores
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow longer lines in test files
    tests/*.py:E501

# Count the number of occurrences of each error/warning code
count = True

# Show source code for each error
show-source = True

# Show pep8 suggestion
show-pep8 = True

# Print total number of errors and warnings to stderr
statistics = True