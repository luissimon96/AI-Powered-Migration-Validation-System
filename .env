# AI-Powered Migration Validation System - Environment Configuration

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=["*"]

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_FILES_PER_REQUEST=20
UPLOAD_DIR=/tmp/migration_validator_uploads

# LLM Provider Settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
LLM_TIMEOUT=60.0
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ENABLED=true

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_ENABLED=true

# Google Configuration  
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-pro
GOOGLE_ENABLED=true

# Security Settings
SECRET_KEY=change-me-in-production-to-a-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Settings (Optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/migration_validator

# Redis Settings (Optional) 
# REDIS_URL=redis://localhost:6379/0
# REDIS_ENABLED=false

# Performance Settings
ASYNC_CONCURRENCY_LIMIT=10
REQUEST_TIMEOUT=300.0

# Behavioral Validation Settings
BROWSER_AUTOMATION_TIMEOUT=300
MAX_VALIDATION_SCENARIOS=10
PLAYWRIGHT_HEADLESS=true

# Logging Settings
LOG_FORMAT=json

# Development Settings
RELOAD_ON_CHANGE=true
UVICORN_RELOAD=true

